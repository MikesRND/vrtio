{
    // C++ IntelliSense configuration for VRTIGO
    // Defines VRTIGO_HAS_IO_HELPERS to enable I/O helper code completion
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/include",
                "${workspaceFolder}/build/_deps/**"
            ],
            "defines": [
                "VRTIGO_HAS_IO_HELPERS"
            ],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "linux-gcc-x64",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json",
            "configurationProvider": "ms-vscode.cmake-tools"
        }
    ],
    "version": 4
}
