{
    // Recommended VSCode settings for VRTIGO development
    // These settings enable tests and examples
    // Feel free to customize for your environment
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.configureSettings": {
        "VRTIGO_BUILD_TESTS": "ON",
        "VRTIGO_BUILD_EXAMPLES": "ON"
    },
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.intelliSenseEngine": "default",
    "files.associations": {
        "*.hpp": "cpp",
        "*.cpp": "cpp",
        "bit": "cpp",
        "cmath": "cpp",
        "compare": "cpp",
        "concepts": "cpp",
        "cstddef": "cpp",
